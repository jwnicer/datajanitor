
{
  "hosting": {
    "source": ".",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "frameworksBackend": {
      "region": "us-central1"
    },
    "rewrites": [
      { "source": "/schema/propose", "function": "schemaPropose" }
    ]
  },
  "emulators": {
    "hub": { "port": 4400 },
    "functions": { "port": 5001 },
    "firestore": { "port": 8080 },
    "hosting": { "port": 5000 },
    "pubsub": { "port": 8085 },
    "storage": { "port": 9199 }
  },
  "firestore": {
    "rules": "firestore.rules"
  }
}
